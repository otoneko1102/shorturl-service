---
import Layout from "../layouts/Layout.astro";
import ShortenForm from "../components/ui/ShortenForm.svelte";

const serviceName =
  (import.meta.env as any).PUBLIC_SERVICE_NAME || "URL Shortener";
const serviceDescription =
  (import.meta.env as any).PUBLIC_SERVICE_DESCRIPTION ||
  "A simple link shortener.";
---

<Layout title={serviceName} description={serviceDescription}>
  <ShortenForm client:load serviceDescription={serviceDescription} />
</Layout>
