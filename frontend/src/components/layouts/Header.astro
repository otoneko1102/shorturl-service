---
import ThemeToggle from "../ui/ThemeToggle.astro";

export interface Props {
  serviceName: string;
}
const { serviceName } = Astro.props;
---

<header>
  <div class="header-container">
    <h1>{serviceName}</h1>
    <ThemeToggle />
  </div>
</header>

<style>
  header {
    width: 100%;
    background-color: var(--container-bg);
    box-shadow: 0 2px 10px var(--shadow-color);
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    height: var(--header-height);
    display: flex;
    align-items: center;
    padding: 0 1rem;
  }
  .header-container {
    display: flex;
    align-items: center;
    width: 100%;
  }
  h1 {
    color: var(--primary-color);
    margin: 0;
    font-size: 1.5rem;
    margin-right: auto;
  }
</style>
